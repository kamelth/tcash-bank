<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= lang_content[lang].title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
  <link rel="stylesheet" href="/index.css">
</head>
<body>

<div class="container">
  <h1 class="mb-4"><i class="fa-solid fa-users-gear"></i> <%= lang_content[lang].title %></h1>

  <!-- Language selection -->
  <form action="/set-lang" method="post">
    <div class="d-flex justify-content-center gap-2 flex-wrap">
      <button type="submit" class="btn btn-light language-btn" name="lang" value="en">
        <img src="https://flagcdn.com/w40/gb.png" alt="English"> English
      </button>
      <button type="submit" class="btn btn-light language-btn" name="lang" value="ar">
        <img src="https://flagcdn.com/w40/sa.png" alt="Arabic"> العربية
      </button>
      <button type="submit" class="btn btn-light language-btn" name="lang" value="fr">
        <img src="https://flagcdn.com/w40/fr.png" alt="French"> Français
      </button>
      <button type="submit" class="btn btn-light language-btn" name="lang" value="cn">
        <img src="https://flagcdn.com/w40/cn.png" alt="Chinese"> 中文
      </button>
    </div>
  </form>

  <!-- Role selection -->
  <div class="card mt-4">
    <a href="/staff/login" class="btn btn-success btn-lg">
      <i class="fa-solid fa-user-tie"></i> <%= lang_content[lang].staff_login %>
    </a>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
