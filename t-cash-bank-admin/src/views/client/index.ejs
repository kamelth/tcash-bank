<!-- src/views/client/index.ejs -->
<!DOCTYPE html>
<html lang="<%= lang %>">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= content.title %></title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
  />
  <link rel="stylesheet" href="/client/index.css" />
</head>
<body>
  <div class="container">
    <h1><i class="fa-solid fa-building-columns"></i> <%= content.title %></h1>
    <p><%= content.instructions %></p>

    <div class="card">
      <form method="post" action="/client/assign_queue">
        <div class="form-group">
          <label for="name"><i class="fa-solid fa-user"></i> <%= content.full_name %></label>
          <input
            type="text"
            class="form-control"
            name="name"
            id="name"
            required
          />
        </div>
        <div class="form-group mt-3">
          <label for="phone"><i class="fa-solid fa-phone"></i> <%= content.phone_number %></label>
          <input
            type="text"
            class="form-control"
            name="phone"
            id="phone"
            required
          />
        </div>
        <div class="form-group mt-3">
          <label for="clientType"><i class="fa-solid fa-users"></i> <%= content.select_client_type %></label>
          <select class="form-control" name="client_type" id="clientType">
            <option value="regular"><%= content.regular_client %></option>
            <option value="vip"><%= content.vip_client %></option>
            <option value="special"><%= content.special_client %></option>
          </select>
        </div>
        <div class="form-group mt-3">
          <label for="service"><i class="fa-solid fa-concierge-bell"></i> <%= content.select_service %></label>
          <select class="form-control" name="service" id="service">
            <option value="loan"><%= content.loan %></option>
            <option value="Customer Care"><%= content.customer_care %></option>
            <option value="withdrawal"><%= content.withdrawal %></option>
            <option value="banking"><%= content.banking %></option>
          </select>
        </div>
        <button
          type="submit"
          class="btn btn-primary btn-lg mt-4"
        >
          <i class="fa-solid fa-ticket"></i> <%= content.queue_ticket %>
        </button>
      </form>
      <a href="/" class="btn-home"><i class="fa-solid fa-home"></i> <%= content.home %></a>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>